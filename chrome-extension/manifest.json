{
  "manifest_version": 3,
  "name": "Triangle Client Manager",
  "version": "1.0.0",
  "description": "Add clients to Triangle system",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}

